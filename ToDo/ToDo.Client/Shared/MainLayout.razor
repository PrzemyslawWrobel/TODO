@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="darkMode" />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="(() => ToggleDrawer())" />
        <MudText Typo="Typo.h5" Class="ml-3">Blazor ToDo</MudText>
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="darkMode" Icon="@Icons.Material.Filled.LightMode" Color="Color.Inherit" ToggledIcon="@Icons.Material.Filled.DarkMode" />
    </MudAppBar>
    <MudDrawer @bind-Open="drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="0"> 
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Tasks</MudNavLink>
            <MudNavLink Href="/categories" Match="NavLinkMatch.All">Categories</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code
{
    bool drawerOpen = true;
    bool darkMode = false;

    void ToggleDrawer()
    {
        drawerOpen = !drawerOpen;
    }

    void ToggleDarkMode()
    {
        darkMode = !darkMode;
    }
}